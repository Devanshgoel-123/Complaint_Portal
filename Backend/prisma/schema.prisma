generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id     Int    @id @default(autoincrement())
  email  String @unique
  hostel String
  Room   String
  Name   String
}

model complaint {
  id             Int    @id @default(autoincrement())
  category       String
  subCategory    String
  hostel         String
  Room           String
  Name           String
  workerAssigned Int
}

model worker {
  id       Int    @id @default(autoincrement())
  name     String
  category String
  Contact  Int
  hostel   String
}
